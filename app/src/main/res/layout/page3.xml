<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="4dp"
    >
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <TextView
            android:id="@+id/add_employee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertcail="true"
            android:text="Add Employee"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="20dp"
            android:padding="4dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:layout_marginRight="19dp"
            android:src="@drawable/ic_icon_1_"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/text"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="104dp"
            android:background="@drawable/text1"
            android:padding="15dp"
            app:layout_constraintStart_toStartOf="@+id/add_employee"
            app:layout_constraintEnd_toEndOf="@+id/add_employee"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/text"
            app:layout_constraintStart_toStartOf="@id/text"
            android:text="this username is exist"
            android:textSize="12sp"
            android:layout_marginStart="15dp"
            android:textColor="#DC6951"/>
    <TextView
        android:id="@+id/txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/text"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintEnd_toEndOf="@id/text"
        android:layout_marginTop="30dp"
        android:text="Password:   12345678"
        android:textColor="#DCDCDC"
        android:textSize="17sp"/>

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/text"
        app:layout_constraintTop_toBottomOf="@+id/txtview"
        app:layout_constraintStart_toStartOf="@+id/txtview"
        app:layout_constraintEnd_toEndOf="@id/txtview"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:padding="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="56dp"
            android:text="Add employee"
            android:textColor="#F69D07" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="56dp"
            android:padding="1dp"
          android:layout_marginStart="15dp"
            android:src="@drawable/ic_person" />

    </RelativeLayout>




    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>