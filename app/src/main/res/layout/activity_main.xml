<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#044E8E"
    tools:ignore="ExtraText">



    <RelativeLayout

        android:id="@+id/employee_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:layout_alignParentEnd="true"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_plus" />

        <TextView
            android:id="@+id/employee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="65dp"
            android:layout_marginTop="20dp"
            android:padding="1dp"
            android:text="employees"
            android:textColor="#fff"
            android:textSize="17sp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:padding="1dp"
            android:src="@drawable/ic_reply_1_" />


    </RelativeLayout>

    <android.support.constraint.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:background="@drawable/back_ground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/employee_header"
        >

        <ImageView
            android:id="@+id/pic_employee"
            android:layout_width="145dp"
            android:layout_height="150dp"
            android:layout_marginTop="150dp"
            android:src="@drawable/ic_employee"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="No DATA FOUND"
            android:textColor="#7D7D7D"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/pic_employee"
            app:layout_constraintStart_toStartOf="@id/pic_employee"
            app:layout_constraintTop_toBottomOf="@+id/pic_employee" />


    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>